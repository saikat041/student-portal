    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.0.0",
    "@types/supertest": "^6.0.3",
    "fast-check": "^4.5.2",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.0.2",
