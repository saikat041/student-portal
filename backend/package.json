{
  "name": "student-portal-backend",
  "version": "1.0.0",
  "description": "Student Management Portal Backend",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node --transpile-only server.ts",
    "build": "tsc",
    "seed": "ts-node seed-atlas.ts",
